<Window
    x:Class="MistycPawCraftCore.Utils.Message.CustomDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MistycPawCraftCore.Utils.Message"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="Auto"
    Height="Auto"
    MaxHeight="600"
    AllowsTransparency="True"
    Background="LightGoldenrodYellow"
    BorderBrush="Black"
    BorderThickness="1"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Height="25"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Foreground="Black"
                    Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ScrollViewer Height="Auto" VerticalScrollBarVisibility="Hidden">
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="25"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Margin="4"
                            VerticalAlignment="Center"
                            Kind="{Binding Image}" />
                        <TextBlock
                            x:Name="lblMensaje"
                            Width="auto"
                            Height="auto"
                            Margin="24,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding Path=Message}"
                            TextWrapping="Wrap" />

                    </StackPanel>
                </ScrollViewer>

            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button
                Name="Si"
                Grid.Column="0"
                Width="70"
                Height="25"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Click="Si_Click"
                Foreground="ForestGreen"
                Style="{DynamicResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="Tick" />
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource Yes}" />
                </StackPanel>
            </Button>
            <Button
                Name="No"
                Grid.Column="1"
                Width="70"
                Height="25"
                Margin="0,0,5,0"
                Click="No_Click"
                Foreground="Red"
                Style="{DynamicResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="No" />
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource No}" />
                </StackPanel>
            </Button>
            <Button
                Name="Aceptar"
                Grid.Column="2"
                Width="Auto"
                Margin="0,0,5,0"
                Click="Aceptar_Click"
                Foreground="ForestGreen"
                Style="{DynamicResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="TickCircleOutline" />
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource Accept}" />
                </StackPanel>
            </Button>
            <Button
                Name="Cancelar"
                Grid.Column="3"
                Width="Auto"
                Margin="0,0,5,0"
                Click="Cancelar_Click"
                Foreground="Red"
                Style="{DynamicResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="None" />
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource Cancel}" />
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</Window>
