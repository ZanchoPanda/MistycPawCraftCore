<Window
    x:Class="MistycPawCraftCore.View.ImportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MistycPawCraftCore.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:MistycPawCraftCore.ViewModel"
    Title="{DynamicResource ImportWindow}"
    Width="500"
    Height="350"
    Background="{DynamicResource MaterialDesignPaper}"
    BorderThickness="1"
    FontFamily="{DynamicResource MaterialDesignFont}"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodel:ImportViewModel />
    </Window.DataContext>
    <StackPanel Margin="5" Orientation="Vertical">
        <Grid MinHeight="75">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                VerticalAlignment="Bottom"
                VerticalContentAlignment="Center"
                Content="{DynamicResource File}"
                FontWeight="Bold" />
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <TextBox
                    Width="350"
                    Height="50"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="True"
                    Text="{Binding FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Margin="5"
                    Command="{Binding SearchFileCommand}"
                    Content="📁"
                    ToolTip="{DynamicResource SelectFile}" />
                <Button
                    Margin="5"
                    Command="{Binding ClearFilePathCommand}"
                    Content="❌"
                    ToolTip="{DynamicResource ClearFile}" />
            </StackPanel>
        </Grid>

        <Grid MinHeight="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Content="{DynamicResource Deck}"
                FontWeight="Bold" />
            <TextBox
                Grid.Row="1"
                Height="175"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                materialDesign:HintAssist.Hint="{Binding HelperText}"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignTextBox}"
                Text="{Binding DeckList}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </Grid>

        <Grid MinHeight="45">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Margin="5"
                    HorizontalAlignment="Center"
                    Command="{Binding AcceptCommand}"
                    Content="{DynamicResource Accept}"
                    Foreground="Green"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                <Button
                    Margin="5"
                    HorizontalAlignment="Center"
                    Command="{Binding CancelCommand}"
                    Content="{DynamicResource Cancel}"
                    Foreground="Red"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
