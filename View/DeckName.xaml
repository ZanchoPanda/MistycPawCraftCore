<Window
    x:Class="MistycPawCraftCore.View.DeckNameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MistycPawCraftCore.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource DeckName}"
    Width="300"
    Height="150"
    Background="LightGoldenrodYellow"
    BorderBrush="Black"
    BorderThickness="1"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            VerticalContentAlignment="Bottom"
            materialDesign:HintAssist.Hint="{DynamicResource DeckName}"
            AutoWordSelection="True"
            Text="{Binding DeckName}" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Command="{Binding AceptarCommand}"
            Foreground="LightGoldenrodYellow">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Margin="2"
                    VerticalAlignment="Bottom"
                    Kind="Create" />
                <TextBlock Text="{DynamicResource Create}" />
            </StackPanel>
        </Button>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Command="{Binding CancelarCommand}"
            Foreground="LightGoldenrodYellow">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Margin="2"
                    VerticalAlignment="Bottom"
                    Kind="Cancel" />
                <TextBlock Text="{DynamicResource Cancel}" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
