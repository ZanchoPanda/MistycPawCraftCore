<Window
    x:Class="MistycPawCraftCore.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MistycPawCraftCore.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource LoadingResources}"
    Width="800"
    Height="500"
    AllowsTransparency="True"
    Background="{x:Null}"
    ContentRendered="Window_ContentRendered"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <materialDesign:Card
        Margin="25"
        materialDesign:ElevationAssist.Elevation="Dp4"
        Background="{DynamicResource MaterialDesignPaper}"
        UniformCornerRadius="15">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <WrapPanel>
                    <Image
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Left"
                        Source="/Utils/Images/PNGs/panda-mtg-app.png" />
                    <TextBlock
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="28"
                        FontWeight="Bold"
                        Style="{DynamicResource MaterialDesignBody1TextBlock}"
                        Text="Mystic Paw Craft" />
                </WrapPanel>

                <TextBlock
                    Margin="0,30,0,15"
                    HorizontalAlignment="Left"
                    FontSize="17"
                    FontWeight="SemiBold"
                    Style="{DynamicResource MaterialDesignBody1TextBlock}"
                    Text="{DynamicResource LoadingResources}" />

                <ProgressBar
                    Name="ProgressBar"
                    Width="280"
                    Height="5"
                    IsIndeterminate="True"
                    Style="{DynamicResource MaterialDesignLinearProgressBar}"
                    Value="0" />

            </StackPanel>


            <StackPanel
                Grid.Column="1"
                Width="320"
                Height="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Image Source="/Utils/Images/PNGs/RoundedSplash-Panfalling.png" />

            </StackPanel>


        </Grid>

    </materialDesign:Card>

</Window>
